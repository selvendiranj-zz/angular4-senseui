{
    "compilerOptions": {
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noEmitHelpers": true,
        "lib": ["es6", "dom"],
        "mapRoot": "./",
        "module": "es6",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "target": "es5",
        "outDir": "../dist",
        "types": [
            "jasmine",
            "webpack",
            "googlemaps"
        ],
        "typeRoots": [
            "../node_modules/@types"
        ]
    }
}